extends layout

block content
  h1= title
  p Welcome to #{title}
  - let items = results
  - let des = `dispatch(\"/restaurant/create\")`
  button.btn( class="btn-secondary m-1" onclick= des) Create
  div(class="container-fluid")
    div(class="col m-1")
      each restaurant, index in items
          - let destination = `dispatch(\"/restaurant/update?id=${restaurant._id}\")`
          - let destination1 = `dispatch(\"/restaurant/detail?id=${restaurant._id}\")`
          - let destination2 = `dispatch(\"/restaurant/delete?id=${restaurant._id}\")`
          div(class="row-sm-2" class="m-1")  Item #{restaurant.restaurant_Itemtype}(#{restaurant.restaurant_Quantity}) is $#{restaurant.restaurant_Price}
          button.btn( class="btn-primary ml-1", onclick= destination) Update
          button.btn( class="btn-success m-1", onclick= destination1) Details
          button.btn( class="btn-danger m-1", onclick= destination2) Delete
  
  script. 
    function dispatch(path){ 
      window.location.href=path 
    }