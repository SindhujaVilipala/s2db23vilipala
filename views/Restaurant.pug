extends layout
block content
  h1= title
  p Welcome to the Restaurant 
  div(class="container-fluid")
        div(class="row")
            -
                let Restaurant = results
                    

            each q,index in Restaurant
                div(class="col-sm-2" onclick=`buy(${index})`) #{q.Itemname}
                div(class="col-sm-2" onclick=`buy(${index})`) #{q.Quantity}
                div(class="col-sm-2" onclick=`buy(${index})`) #{q.Price}
  script.                
        function buy(intemNo)
        {
              alert(`you purchased Item ${intemNo+1}`)
        }